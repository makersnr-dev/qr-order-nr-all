generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderType { STORE DELIVERY }
enum OrderStatus { PENDING CONFIRMED READY COMPLETED CANCELED REFUND_PENDING REFUNDED }

model User {
  id           String   @id @default(cuid())
  email        String  @unique
  username     String  @unique
  passwordHash String
  globalRole   GlobalRole @default(USER)
  createdAt    DateTime @default(now())
  members      StoreMember[]
}

enum GlobalRole { PLATFORM_ADMIN USER }
enum StoreRole { OWNER ADMIN STAFF ANALYST }

model Store {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  phone     String
  address   String
  openTime  String  // "09:00"
  closeTime String  // "22:00"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   StoreMember[]
  menus     Menu[]
  orders    Order[]
  accounts  PaymentAccount[]
}

model StoreMember {
  id      String   @id @default(cuid())
  storeId String
  userId  String
  role    StoreRole @default(ADMIN)

  store   Store @relation(fields: [storeId], references: [id])
  user    User  @relation(fields: [userId], references: [id])

  @@unique([storeId, userId])
}

model Menu {
  id        String   @id @default(cuid())
  storeId   String
  name      String
  price     Int
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store     Store @relation(fields: [storeId], references: [id])
}

model PaymentAccount {
  id        String   @id @default(cuid())
  storeId   String
  bank      String
  accountNo String
  holder    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store     Store @relation(fields: [storeId], references: [id])
}

model Order {
  id           String   @id @default(cuid())
  storeId      String
  type         OrderType
  tableNumber  Int?
  userId       String?
  guestKey     String?
  status       OrderStatus @default(PENDING)
  itemsJson    Json
  subtotal     Int
  deliveryFee  Int
  total        Int
  note         String
  paymentRef   String
  cancelReason String
  confirmedAt  DateTime
  readyAt      DateTime
  completedAt  DateTime
  canceledAt   DateTime
  refundAmount Int
  refundedAt   DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  store        Store  @relation(fields: [storeId], references: [id])
  user         User?  @relation(fields: [userId], references: [id])

  @@index([storeId, createdAt])
}


model QrCode {
  id          String   @id @default(cuid())
  storeId     String
  tableNumber Int
  token       String
  url         String
  modes       String    // comma separated: store,delivery,reservation
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  store       Store @relation(fields: [storeId], references: [id])

  @@index([storeId, createdAt])
}


model StaffCall {
  id          String   @id @default(cuid())
  storeId     String
  tableNumber Int
  type        String   // WATER/CLEANUP/CHECKOUT/OTHER
  note        String
  status      String   @default("PENDING") // PENDING/ACK/DONE
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  store       Store @relation(fields: [storeId], references: [id])

  @@index([storeId, createdAt])
}
